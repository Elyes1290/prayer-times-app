<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quran_widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quran_widget_background"
    android:padding="16dp"
    android:gravity="center"
    android:elevation="8dp">

    <!-- En-tÃªte avec badge premium - Design moderne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/quran_header_background"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“– Coran Premium"
            android:textColor="#FFD700"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="start"
            android:letterSpacing="0.05"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <ImageView
            android:id="@+id/quran_premium_badge"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_premium_star"
            android:contentDescription="Premium" />

    </LinearLayout>

    <!-- Titre de la sourate - Style moderne -->
    <TextView
        android:id="@+id/quran_surah_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aucune lecture"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:letterSpacing="0.02"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:background="@drawable/quran_title_background"
        android:padding="8dp" />

    <!-- Nom du rÃ©citateur - Style amÃ©liorÃ© -->
    <TextView
        android:id="@+id/quran_reciter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SÃ©lectionner un rÃ©citateur"
        android:textColor="#E0E0E0"
        android:textSize="13sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:letterSpacing="0.01" />

    <!-- Barre de progression - Design moderne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/quran_progress_container_background"
        android:padding="12dp">

        <ProgressBar
            android:id="@+id/quran_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progressTint="#4ECDC4"
            android:progressBackgroundTint="#444444"
            android:layout_marginBottom="8dp"
            android:background="@drawable/quran_progress_background" />

        <TextView
            android:id="@+id/quran_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00 / 00:00"
            android:textColor="#E0E0E0"
            android:textSize="11sp"
            android:gravity="center"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- ContrÃ´les audio - Design premium -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/quran_controls_container_background"
        android:padding="16dp">

        <!-- Bouton PrÃ©cÃ©dent - Style moderne -->
        <ImageButton
            android:id="@+id/quran_previous_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_previous"
            android:background="@drawable/quran_secondary_button_background"
            android:contentDescription="PrÃ©cÃ©dent"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp"
            android:elevation="4dp" />

        <!-- Bouton Play/Pause - Style premium -->
        <ImageButton
            android:id="@+id/quran_play_pause_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_play"
            android:background="@drawable/quran_main_play_button_background"
            android:contentDescription="Play/Pause"
            android:scaleType="centerInside"
            android:layout_marginHorizontal="12dp"
            android:elevation="6dp" />

        <!-- Bouton Suivant - Style moderne -->
        <ImageButton
            android:id="@+id/quran_next_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_next"
            android:background="@drawable/quran_secondary_button_background"
            android:contentDescription="Suivant"
            android:scaleType="centerInside"
            android:layout_marginStart="12dp"
            android:elevation="4dp" />

    </LinearLayout>

    

    <!-- Options de lecture - Style raffinÃ© -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Bouton Auto-avancement - Design amÃ©liorÃ© -->
        <ImageButton
            android:id="@+id/quran_auto_advance_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_auto_advance"
            android:background="@drawable/quran_modern_option_button_background"
            android:contentDescription="Auto-avancement"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp"
            android:elevation="2dp" />

        <!-- Bouton Boucle - Design amÃ©liorÃ© -->
        <ImageButton
            android:id="@+id/quran_loop_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_loop"
            android:background="@drawable/quran_modern_option_button_background"
            android:contentDescription="Boucle"
            android:scaleType="centerInside"
            android:layout_marginStart="12dp"
            android:elevation="2dp" />

    </LinearLayout>



    <!-- Bouton Ouvrir App - Style Ã©lÃ©gant -->
    <ImageButton
        android:id="@+id/quran_open_app_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_open_app"
        android:background="@drawable/quran_modern_open_button_background"
        android:contentDescription="Ouvrir l'application"
        android:scaleType="centerInside"
        android:elevation="3dp"
        android:layout_marginTop="4dp" />

</LinearLayout>
