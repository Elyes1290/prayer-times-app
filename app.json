{
  "expo": {
    "name": "MyAdhan: Muslim Prayer App",
    "slug": "prayer-times-app",
    "version": "1.0.13",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "prayertimesapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.drogbinho.myadhan",
      "buildNumber": "1.0.13",
      "icon": "./assets/images/icon.png",
      "locales": {
        "en": "./locales/ios/en.json",
        "fr": "./locales/ios/fr.json",
        "ar": "./locales/ios/ar.json",
        "es": "./locales/ios/es.json",
        "it": "./locales/ios/it.json",
        "de": "./locales/ios/de.json",
        "pt": "./locales/ios/pt.json",
        "tr": "./locales/ios/tr.json",
        "bn": "./locales/ios/bn.json",
        "fa": "./locales/ios/fa.json",
        "nl": "./locales/ios/nl.json",
        "ru": "./locales/ios/ru.json",
        "ur": "./locales/ios/ur.json"
      },
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "location",
          "fetch",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "We need your location to calculate accurate prayer times based on your current city.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to calculate accurate prayer times and send notifications even when the app is in the background.",
        "NSLocationAlwaysUsageDescription": "We need your location to provide accurate prayer times notifications based on your position.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone.",
        "NSCameraUsageDescription": "This app does not use the camera.",
        "NSPhotoLibraryUsageDescription": "This app does not use your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.drogbinho.prayertimesapp2",
      "versionCode": 80
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-background-fetch",
      "./plugins/withIosNativeModules.js",
      "./plugins/withIosSounds.js",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "developmentClient": true,
    "assetBundlePatterns": [
      "assets/images/**/*",
      "assets/sounds/*.mp3",
      "assets/fonts/**/*",
      "assets/quran-offline-data/**/*",
      "assets/hadith-offline-data/**/*",
      "assets/data/**/*",
      "assets/boussole/**/*"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "14e34a3b-d846-4f78-8908-d80cdbc6d1d7"
      },
      "apiBaseUrl": "https://myadhanapp.com/api",
      "premiumContentBaseUrl": "https://myadhanapp.com/premium",
      "recitationsBaseUrl": "https://myadhanapp.com/api/recitations",
      "adhansBaseUrl": "https://myadhanapp.com/api/adhans"
    },
    "development": {
      "hotReload": false,
      "fastRefresh": false,
      "liveReload": false
    }
  }
}
